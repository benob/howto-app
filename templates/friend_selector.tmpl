<div class="row form-check form-check-inline">
	{% for user in friends %}
	<div class="col-sm-6 col-md-4 col-lg-3">
		<input class="hidden-checkbox form-check-input" type="checkbox" name="friend" id="checkitem-{{ user._id }}" value="{{ user._id }}" {{ 'checked' if user._id in initial_share else '' }} onchange="update_checkbox(this);return false;">
		<label class="form-check-label card mb-3" for="checkitem-{{ user._id }}">
			<img src="{{ user.picture }}" class="card-img-top" alt="{{ user.name|e }}">
			<div class="card-body">
				<p class="card-text">{{ user.name|e }}</p>
			</div>
			</a>
		</label>
	</div>
	{% endfor %}
</div>
