<div class="row">
	<div class="col">
		<a name="comment"></a>
		<form action="/comment/{{ videoId }}" method="post">
			<div class="form-group">
				<h4 for="text">What did you learn from this video?</h4>
				<div class="stt-textarea">
					<textarea id="text" name="text" class="form-control comment-form" rows="3" autofocus>{{ text }}</textarea>
					<button type="button" stt-target="text" class="stt-button btn disabled"><i class="fas fa-microphone-slash"></i></button>
				</div>
			</div>
			<button type="submit" class="btn btn-primary"><i class="fas fa-pen"></i> Save</button>
		</form>
	</div>
</div>
